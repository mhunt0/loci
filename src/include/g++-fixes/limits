// -*- c++ -*-

#ifndef _LOCI_LIMITS_H
#define _LOCI_LIMITS_H 1


#include <limits.h>

template<typename _T> struct numeric_limits;

template<> struct numeric_limits<int> {
    // swiped from libstdc++-3
    static int min() throw() { return INT_MIN; }
    static int max() throw() { return INT_MAX; }
};

#endif
